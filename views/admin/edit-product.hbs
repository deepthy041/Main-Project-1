                    <label for="">Price</label>
                    <input type="text" name="price" class="form-control" id="price" value="{{product.price}}" >
                   <span id="priceee" class="text-danger"></span>
                    <label for="">Description</label>
                    <input type="text" name="Description" class="form-control" id="Description" value="{{product.Description}}" >
                    <span id="discription" class="text-danger"></span>
                    <label for="">Image</label>
                    <img src="/productimages/{{product._id}}.jpg" alt="" style="width:100px ;height:auto" id="imgView"
                        class="pt-3">
                    <input type="file" name="Image" class="form-control" required onchange="viewImage(event)">

                    <button type="submit" class="btn btn-success mt-4" onclick="return validation()">submit
                      
                    </button>


                </form>
            </div>

        </div>
    </div>
</section>
<script defer src="https://cdn.crop.guide/loader/l.js?c=GVVLNV"></script>

        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Product</h2>
                <form action="/admin/edit-product/{{product._id}}" method="post">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" id="Name" value="{{product.Name}}"  onkeyup="validateName()">
                      <span id="nameerr" class="text-danger"></span>
                    <label for="">Category</label>
                    <input type="text" name="category" class="form-control" id="category" value="{{product.category}}" onkeyup="validateCategory()">
